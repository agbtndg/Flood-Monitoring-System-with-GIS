# ============================================
# SILAY DRRMO - ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# ALL VARIABLES MARKED AS [REQUIRED] MUST BE SET OR THE APPLICATION WILL NOT START

# ============================================
# DJANGO SETTINGS
# ============================================

# Django Secret Key [REQUIRED FOR PRODUCTION]
# Generate a new one for production using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Debug Mode [REQUIRED]
# ALWAYS set to False in production for security!
DEBUG=True

# Allowed Hosts [REQUIRED]
# Comma-separated list of domains/IPs allowed to access the application
# Example: localhost,127.0.0.1,silay-drrmo.gov.ph,www.silay-drrmo.gov.ph
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# DATABASE CONFIGURATION [ALL REQUIRED]
# ============================================

DB_NAME=silaydrrmo_db
DB_USER=postgres
DB_PASSWORD=CHANGE-THIS-STRONG-PASSWORD-REQUIRED
DB_HOST=localhost
DB_PORT=5432

# ============================================
# API KEYS [REQUIRED]
# ============================================

# WorldTides API Key - Get from https://www.worldtides.info/
WORLDTIDES_API_KEY=CHANGE-THIS-YOUR-API-KEY-REQUIRED

# ============================================
# SECURITY [REQUIRED]
# ============================================

# Admin Registration Key - Use a strong, random string
# Generate using: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# This key is required for admin user registration
ADMIN_REGISTRATION_KEY=CHANGE-THIS-STRONG-RANDOM-KEY-REQUIRED

# ============================================
# EMAIL CONFIGURATION [OPTIONAL]
# ============================================
# Required for password reset and email notifications in production

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# SECURITY CHECKLIST BEFORE PRODUCTION
# ============================================
# [ ] Generated new SECRET_KEY (not the example above)
# [ ] Set DEBUG=False
# [ ] Updated ALLOWED_HOSTS with your domain
# [ ] Set strong DB_PASSWORD (minimum 16 characters, mixed case, numbers, symbols)
# [ ] Added WORLDTIDES_API_KEY from worldtides.info
# [ ] Generated strong ADMIN_REGISTRATION_KEY (use secrets.token_urlsafe(32))
# [ ] Configured email settings for notifications
# [ ] Verified .env is in .gitignore
# [ ] Tested application startup with production settings
# [ ] Changed default database user password (not 'postgres')
# [ ] Enabled firewall and restricted database access
# [ ] Set up HTTPS with valid SSL certificate
# [ ] Configured regular database backups
